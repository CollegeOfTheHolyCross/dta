<% if user_signed_in? %>
    <div class="btn-group" id="user_utility_links">
      <%= link_to new_generic_object_path, class: "btn btn-default", id: "dashboard_link" do %>
          <span class="glyphicon glyphicon-dashboard"></span>
          <span class="sr-only">Select to access</span>
          <span class="hidden-xs">&nbsp;<%= current_user.name %></span>
          <span class="sr-only"> dashboard</span>
      <% end %>
      <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" href="#"><span class="sr-only">select for additional menu options</span><span class="caret" ></span></a>
      <ul class="dropdown-menu dropdown-menu-right" role="menu">
        <li><%= link_to raw('<span class="glyphicon glyphicon-bookmark"></span> Bookmarks'), bookmarks_path %></li>
        <li class="divider"></li>
        <li><%= link_to raw('<span class="glyphicon glyphicon-upload"></span> Upload'), new_generic_object_path, id: 'upload_nav_link' %></li>
        <li class="divider"></li>
        <li><%= link_to raw('<span class="glyphicon glyphicon-log-out"></span> Log Out'), destroy_user_session_path, id: 'logout_nav_link' %></li>
      </ul>
    </div><!-- /.btn-group -->
<% else %>
    <div class="btn-group login_button pull-right">
    <%= link_to raw('<span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Login'), new_user_session_path, class: "btn btn-default btn-group", title: "Login" %>
    </div>
<% end %>
